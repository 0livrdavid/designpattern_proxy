{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["express-serve-static-core", "express"]
  },
  "include": ["server/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
